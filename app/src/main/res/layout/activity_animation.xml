<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vinoth.activitynavigator.Animation">

    <ImageView
        android:src="@drawable/car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imCar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <GridLayout
        android:layout_width="335dp"
        android:layout_height="196dp">

        <Button
            android:onClick="animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alpha"
            android:id="@+id/btnAlpha"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:onClick="animation"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TranslationX"
            android:id="@+id/btnTranslationX"
            android:layout_alignTop="@+id/button3"
            android:layout_alignLeft="@+id/btnAll"
            android:layout_alignStart="@+id/btnAll"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:onClick="animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TranstionY"
            android:id="@+id/btnTranstionY"
            android:layout_alignTop="@+id/btnTranslationX"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:onClick="animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:id="@+id/btnAll"
            android:layout_alignTop="@+id/btnAlpha"
            android:layout_centerHorizontal="true"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:onClick="animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rotation"
            android:id="@+id/btnRotation"
            android:layout_row="1"
            android:layout_column="1" />
    </GridLayout>

    <Button
        android:onClick="animation"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="New Button"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/btnAlpha"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</LinearLayout>
