<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vinoth.activitynavigator.MainActivity"
    android:orientation="vertical">




    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etArraysize"
        android:layout_gravity="center_horizontal"
        android:hint="Enter Array Size" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rbgComp1"
        android:orientation="vertical">


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best case"
            android:id="@+id/rbBest"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avg case"
            android:id="@+id/rbAvg"
            android:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="worst case"
            android:id="@+id/rbWorst"
            android:checked="false" />
    </RadioGroup>

    <Button
        android:onClick="GenraArry"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Generate Array"
        android:gravity="center"
        android:id="@+id/btnGenarry" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="choose algorithm"
        android:id="@+id/tvSta"
        android:gravity="center" />

    <TableLayout
        android:layout_width="245dp"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:onClick="doAlgori"
                android:text="Bubblesort"
                android:id="@+id/btnBubble"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Bubblesort"
                android:id="@+id/tvBubblesort"
                android:layout_column="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:onClick="doAlgori"
                android:text="selection sort"
                android:id="@+id/btnSelectin"
                android:layout_column="0"
                android:layout_gravity="top|left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="selection sort"
                android:id="@+id/tvSelectionsort"
                android:layout_column="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:onClick="doAlgori"
                android:text="insertion"
                android:id="@+id/btnInsertion"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="insertion"
                android:id="@+id/tvinsertion"
                android:layout_column="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:onClick="doAlgori"
                android:text="Merge sort"
                android:id="@+id/btnMerge"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Merge sort"
                android:id="@+id/tvMergesort"
                android:layout_column="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:onClick="doAlgori"
                android:text="Quick sort"
                android:id="@+id/btnQuick"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Quick sort"
                android:id="@+id/tvQuickssort"
                android:layout_column="1" />
        </TableRow>

    </TableLayout>
    <Button
        android:onClick="doAlgori"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Beanchmark All"
        android:id="@+id/btnBeanchall" />

</LinearLayout>
