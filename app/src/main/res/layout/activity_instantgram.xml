<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vinoth.activitynavigator.InstantgramActivity"
    android:weightSum="1"
    android:orientation="vertical">

    <ImageView
        android:src="@drawable/index"
        android:layout_width="fill_parent"
        android:layout_height="277dp"
        android:id="@+id/ivResult"
        android:layout_weight="0.11" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView"
        android:layout_weight="0.11" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.47"
            android:weightSum="1">

            <Button
                android:onClick="applyFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/btnGrayscale" />

            <Button
                android:onClick="applyFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rotateBitmap"
                android:id="@+id/btnRotat" />

            <Button
                android:onClick="applyFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="flipVerticallyBitmap"
                android:id="@+id/btnFVB" />

            <Button
                android:onClick="applyFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/btntransp" />

            <Button
                android:onClick="applyFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/btnred" />

            <Button
                android:onClick="applyFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="flipHorizonallyBitmap"
                android:id="@+id/btnFHB" />

            /////////////////////////////////////////

            <Button
                android:onClick="applyFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="flipVerticallyBitmap"
                android:id="@+id/btnif1" />

            <Button
                android:onClick="applyFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/btnif2" />

            <Button
                android:onClick="applyFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/btnif3" />

            <Button
                android:onClick="applyFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="flipVerticallyBitmap"
                android:id="@+id/btnif4" />

            <Button
                android:onClick="applyFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/btnif5" />

            <Button
                android:onClick="applyFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/btnif6" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.11">

        <ImageButton
            android:onClick="startcamera"
            android:src="@drawable/ic_camera_alt_black_48dp"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:background="#00000000" />

        <ImageButton
            android:onClick="insertphoto"
            android:src="@drawable/ic_insert_photo_black_48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:background="#00000000" />
    </LinearLayout>

</LinearLayout>
